{
  "name": "nextjs-ts-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev | pino-pretty -c",
    "build": "next build | pino-pretty -c",
    "start": "next start",
    "check-types": "tsc",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettify": "prettier --ignore-unknown --write",
    "format": "npm-run-all --parallel lint:fix prettify",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "stage": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint src --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/color-hash": "^1.0.1",
    "@types/date-fns": "^2.6.0",
    "@types/ramda": "^0.27.45",
    "color-hash": "^2.0.1",
    "date-fns": "^2.25.0",
    "framer-motion": "^4",
    "next": "11.1.2",
    "pino": "^7.0.0-rc.7",
    "ramda": "^0.27.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remeda": "^0.0.30"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/dom": "^8.6.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "17.0.24",
    "babel-jest": "^27.2.2",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "typescript": "4.4.3"
  }
}
